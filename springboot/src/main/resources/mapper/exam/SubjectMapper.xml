<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.exam.SubjectMapper">

    <resultMap id="BaseResultMap" type="com.example.entity.exam.Subject">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="major_id" property="majorId"/>
        <result column="description" property="description"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_time" property="updatedTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, major_id, description, created_time, updated_time
    </sql>

    <insert id="insert" parameterType="com.example.entity.exam.Subject" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO subject (name, major_id, description, created_time, updated_time)
        VALUES (#{name}, #{majorId}, #{description}, NOW(), NOW())
    </insert>

    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM subject WHERE id = #{id}
    </delete>

    <update id="updateById" parameterType="com.example.entity.exam.Subject">
        UPDATE subject
        SET name = #{name},
            major_id = #{majorId},
            description = #{description},
            updated_time = NOW()
        WHERE id = #{id}
    </update>

    <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM subject
        WHERE id = #{id}
    </select>

    <select id="selectByName" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM subject
        WHERE name = #{name}
    </select>

    <select id="selectByMajorId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM subject
        WHERE major_id = #{majorId}
        ORDER BY created_time DESC
    </select>

    <select id="selectAll" parameterType="com.example.entity.exam.Subject" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM subject
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
        ORDER BY created_time DESC
    </select>

</mapper>