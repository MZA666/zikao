<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.exam.QuestionCollectionMapper">

    <resultMap id="BaseResultMap" type="com.example.entity.exam.QuestionCollection">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="question_id" property="questionId"/>
        <result column="collected_time" property="collectedTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, question_id, collected_time
    </sql>

    <insert id="insert" parameterType="com.example.entity.exam.QuestionCollection" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO question_collection (user_id, question_id, collected_time)
        VALUES (#{userId}, #{questionId}, NOW())
    </insert>

    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM question_collection WHERE id = #{id}
    </delete>

    <delete id="deleteByUserIdAndQuestionId">
        DELETE FROM question_collection 
        WHERE user_id = #{userId} AND question_id = #{questionId}
    </delete>

    <update id="updateById" parameterType="com.example.entity.exam.QuestionCollection">
        UPDATE question_collection
        SET user_id = #{userId},
            question_id = #{questionId},
            collected_time = NOW()
        WHERE id = #{id}
    </update>

    <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM question_collection
        WHERE id = #{id}
    </select>

    <select id="selectByUserId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM question_collection
        WHERE user_id = #{userId}
        ORDER BY created_time DESC
    </select>

    <select id="selectByQuestionId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM question_collection
        WHERE question_id = #{questionId}
    </select>

    <select id="selectByUserIdAndQuestionId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM question_collection
        WHERE user_id = #{userId} AND question_id = #{questionId}
    </select>

</mapper>