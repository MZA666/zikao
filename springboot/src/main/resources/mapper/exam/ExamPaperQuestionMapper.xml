<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.exam.ExamPaperQuestionMapper">

    <resultMap id="BaseResultMap" type="com.example.entity.exam.ExamPaperQuestion">
        <id column="id" property="id"/>
        <result column="exam_paper_id" property="examPaperId"/>
        <result column="question_id" property="questionId"/>
        <result column="score" property="score"/>
        <result column="sort_order" property="sortOrder"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, exam_paper_id, question_id, score, sort_order
    </sql>

    <insert id="insert" parameterType="com.example.entity.exam.ExamPaperQuestion" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO exam_paper_question (exam_paper_id, question_id, score, sort_order)
        VALUES (#{examPaperId}, #{questionId}, #{score}, #{sortOrder})
    </insert>

    <delete id="deleteByExamPaperId" parameterType="java.lang.Integer">
        DELETE FROM exam_paper_question WHERE exam_paper_id = #{examPaperId}
    </delete>

    <delete id="deleteByExamPaperIdAndQuestionId">
        DELETE FROM exam_paper_question 
        WHERE exam_paper_id = #{examPaperId} AND question_id = #{questionId}
    </delete>

    <update id="updateById" parameterType="com.example.entity.exam.ExamPaperQuestion">
        UPDATE exam_paper_question
        SET exam_paper_id = #{examPaperId},
            question_id = #{questionId},
            score = #{score},
            sort_order = #{sortOrder}
        WHERE id = #{id}
    </update>

    <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM exam_paper_question
        WHERE id = #{id}
    </select>

    <select id="selectByExamPaperId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM exam_paper_question
        WHERE exam_paper_id = #{examPaperId}
        ORDER BY sort_order ASC
    </select>

</mapper>