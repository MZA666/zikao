<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.FileMapper">

    <resultMap id="BaseResultMap" type="com.example.entity.File">
        <id column="file_id" property="fileId" />
        <result column="file_name" property="fileName" />
        <result column="original_name" property="originalName" />
        <result column="file_path" property="filePath" />
        <result column="file_size" property="fileSize" />
        <result column="file_type" property="fileType" />
        <result column="uploader" property="uploader" />
        <result column="uploader_id" property="uploaderId" />
        <result column="status" property="status" />
        <result column="reason" property="reason" />
        <result column="upload_time" property="uploadTime" />
        <result column="audit_time" property="auditTime" />
        <result column="auditor_id" property="auditorId" />
        <result column="description" property="description" />
        <result column="is_shared" property="isShared" />
        <result column="major_id" property="majorId" />
        <result column="discipline_id" property="disciplineId" />
    </resultMap>

    <sql id="Base_Column_List">
        file_id, file_name, original_name, file_path, file_size, file_type, 
        uploader, uploader_id, status, reason, upload_time, audit_time, auditor_id, description, is_shared, major_id, discipline_id
    </sql>

    <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from file_info
        where file_id = #{fileId}
    </select>

    <select id="selectAll" parameterType="com.example.entity.File" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from file_info
        <where>
            <if test="fileName != null and fileName != ''">
                and file_name like concat('%', #{fileName}, '%')
            </if>
            <if test="originalName != null and originalName != ''">
                and original_name like concat('%', #{originalName}, '%')
            </if>
            <if test="uploader != null and uploader != ''">
                and uploader like concat('%', #{uploader}, '%')
            </if>
            <if test="uploaderId != null">
                and uploader_id = #{uploaderId}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="isShared != null">
                and is_shared = #{isShared}
            </if>
            <if test="description != null and description != ''">
                and description like concat('%', #{description}, '%')
            </if>
            <if test="majorId != null">
                and major_id = #{majorId}
            </if>
            <if test="disciplineId != null">
                and discipline_id = #{disciplineId}
            </if>
        </where>
        order by upload_time desc
    </select>

    <select id="selectByUploaderId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from file_info
        where uploader_id = #{uploaderId}
        order by upload_time desc
    </select>

    <select id="selectByStatus" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from file_info
        where status = #{status}
        order by upload_time desc
    </select>

    <select id="selectBySharedStatus" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from file_info
        where is_shared = #{isShared}
        order by upload_time desc
    </select>

    <insert id="insert" parameterType="com.example.entity.File" useGeneratedKeys="true" keyProperty="fileId">
        insert into file_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="fileName != null">file_name,</if>
            <if test="originalName != null">original_name,</if>
            <if test="filePath != null">file_path,</if>
            <if test="fileSize != null">file_size,</if>
            <if test="fileType != null">file_type,</if>
            <if test="uploader != null">uploader,</if>
            <if test="uploaderId != null">uploader_id,</if>
            <if test="status != null">status,</if>
            <if test="reason != null">reason,</if>
            <if test="uploadTime != null">upload_time,</if>
            <if test="auditTime != null">audit_time,</if>
            <if test="auditorId != null">auditor_id,</if>
            <if test="description != null">description,</if>
            <if test="isShared != null">is_shared,</if>
            <if test="majorId != null">major_id,</if>
            <if test="disciplineId != null">discipline_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="fileName != null">#{fileName},</if>
            <if test="originalName != null">#{originalName},</if>
            <if test="filePath != null">#{filePath},</if>
            <if test="fileSize != null">#{fileSize},</if>
            <if test="fileType != null">#{fileType},</if>
            <if test="uploader != null">#{uploader},</if>
            <if test="uploaderId != null">#{uploaderId},</if>
            <if test="status != null">#{status},</if>
            <if test="reason != null">#{reason},</if>
            <if test="uploadTime != null">#{uploadTime},</if>
            <if test="auditTime != null">#{auditTime},</if>
            <if test="auditorId != null">#{auditorId},</if>
            <if test="description != null">#{description},</if>
            <if test="isShared != null">#{isShared},</if>
            <if test="majorId != null">#{majorId},</if>
            <if test="disciplineId != null">#{disciplineId},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.File">
        update file_info
        <set>
            <if test="fileName != null">file_name = #{fileName},</if>
            <if test="originalName != null">original_name = #{originalName},</if>
            <if test="filePath != null">file_path = #{filePath},</if>
            <if test="fileSize != null">file_size = #{fileSize},</if>
            <if test="fileType != null">file_type = #{fileType},</if>
            <if test="uploader != null">uploader = #{uploader},</if>
            <if test="uploaderId != null">uploader_id = #{uploaderId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="reason != null">reason = #{reason},</if>
            <if test="uploadTime != null">upload_time = #{uploadTime},</if>
            <if test="auditTime != null">audit_time = #{auditTime},</if>
            <if test="auditorId != null">auditor_id = #{auditorId},</if>
            <if test="description != null">description = #{description},</if>
            <if test="isShared != null">is_shared = #{isShared},</if>
            <if test="majorId != null">major_id = #{majorId},</if>
            <if test="disciplineId != null">discipline_id = #{disciplineId},</if>
        </set>
        where file_id = #{fileId}
    </update>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from file_info where file_id = #{fileId}
    </delete>
</mapper>